<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/order.css" />
<link rel="stylesheet" href="/stylesheets/shopping-cart.css" />

<input type="hidden" id="_csrf" value="<%=csrfToken%>" />

<div class="container" style="align-items: center;">
  <div class="card shopping-cart">
    <div class="card-header bg-dark text-light">
      <i class="fad fa-box-full"></i>
      Manage Orders
      <div class="clearfix"></div>
    </div>

    <% if (orders) { %>
    <div id="main-row" class="row" style="align-items: center;">
      <div class="col-md-12 col-md-offset-1">
        <div class="panel panel-default panel-table">
          <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
              <thead>
                <tr>
                  <th><em class="fa fa-cog"></em></th>
                  <th class="hidden-xs">ID</th>
                  <th>Customer</th>
                  <th>Qty</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach(order => { %>
                <tr>
                  <td align="center">
                    <% if (order.fulfilled) { %>
                    <button
                      id="btnfulfilled"
                      class="btn btn-success"
                      onClick="fulfillOrder('<%= order._id %>', this)"
                    >
                      <i class="fal fa-truck-loading"></i>
                    </button>
                    <% } else { %>
                    <button
                      id="btnfulfilled"
                      class="btn btn-warning"
                      onClick="fulfillOrder('<%= order._id %>', this)"
                    >
                      <i class="fal fa-truck-loading"></i>
                    </button>
                    <% } %> <% if (order.paymentVerified) { %>
                    <button
                      id="btnverify"
                      class="btn btn-success"
                      onClick="verifyPayment('<%= order._id %>', this)"
                    >
                      <i class="fal fa-sack-dollar"></i>
                    </button>
                    <% } else { %>
                    <button
                      id="btnverify"
                      class="btn btn-warning"
                      onClick="verifyPayment('<%= order._id %>', this)"
                    >
                      <i class="fal fa-sack-dollar"></i>
                    </button>
                    <% } %>
                  </td>
                  <td class="hidden-xs">
                    <a href="/orders/orderdetails/<%= order._id%>"
                      ><%= order._id.toString().substring(0,4) + '..' %></a
                    >
                  </td>
                  <td><%= order.user ? order.user.fullName : 'Anonymous' %></td>
                  <td><%= order.cart.totalQty %></td>
                  <td>&#x20A6;<%= order.cart.totalPrice %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <% if (pages > 0) { %>
          <ul class="pagination text-center mt-2 ml-2">
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/orders/manage/1">First</a>
            </li>
            <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1)
            %> <% if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) {
            %> <% if (i == current) { %>
            <li class="page-item active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li>
              <a class="page-link" href="/orders/manage/<%= i %>"><%= i %></a>
            </li>
            <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %> <% } %> <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/orders/manage/<%= pages %>">Last</a>
            </li>
            <% } %>
          </ul>
          <% } %>
          <!-- <div class="panel-footer">
            <div class="row">
              <div class="col col-xs-4">Page 1 of 5</div>
              <div class="col col-xs-8">
                <ul class="pagination hidden-xs pull-right">
                  <li><a href="#">1</a></li>
                  <li><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#">4</a></li>
                  <li><a href="#">5</a></li>
                </ul>
                <ul class="pagination visible-xs pull-right">
                  <li><a href="#">«</a></li>
                  <li><a href="#">»</a></li>
                </ul>
              </div>
            </div>
          </div> -->
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="container">
      <h4 class="text-center">
        There are No Orders in the Database that meet your criteria
      </h4>
    </div>
    <% } %>
  </div>
</div>

<div
  class="modal fade"
  id="displayfulfillModalSuccess"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          Order Fulfillment
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          The Order has been fulfilled and marked either as delivered or picked
          up
        </p>
        >
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

