<div class="container" style="align-items: center;">
  <div class="card shopping-cart">
    <div class="card-header bg-dark text-light">
      <i class="fab fa-product-hunt"></i>
      New Product
      <div class="clearfix"></div>
    </div>

    <form action="/products/productdetails/product/new?_csrf=<%=csrfToken%>" method="POST" enctype="multipart/form-data">
      <div class="container mt-3">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <!-- Product Name -->
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fal fa-signature"></i>
                </span>
              </div>
              <input
                name="name"
                class="form-control"
                placeholder="Product Name"
                type="text"
                required
              />
            </div>

            <!-- Product Category -->
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fad fa-compress-arrows-alt"></i>
                </span>
              </div>
              <input
                name="category"
                class="form-control"
                placeholder="Product Category"
                type="text"
                required
              />
            </div>

            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"
                  ><i class="fal fa-file-signature"></i
                ></span>
              </div>

              <textarea
                class="form-control"
                id="txtAddress"
                placeholder="Product Description"
                name="description"
                cols="60"
                rows="10"
                required
                ></textarea>
            </div>
          </div>
          <div class="col-md-6 col-sm-12">
            <div class="row">
              <div class="col-12">
                <input
                  style="max-width: 100%;"
                  type="file"
                  name="image"
                  id="file-selector"
                  class="btn btn-warning"
                />
                <!-- <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> <span>Choose Image&hellip;</span></label> -->

                <!-- <button class="btn btn-warning" onClick=""> <i class="fal fa-truck-loading" disabled></i> Save Image</button> -->
              </div>
              <div class="col-12 mt-3">
                <img
                  src=""
                  alt="Please upload Product Image"
                  class="img-responsive"
                  id="prod-image"
                  style="max-width: 100%; max-height: 100%;"
                />
              </div>
            </div>
          </div>
        </div>
        <input type="submit" class="btn btn-warning mb-1" value="Save Contents"/>
        <!-- Row -->
      </div>
      <!-- Container mt-3 -->
    </form>
  </div>
</div>

<script src="/javascripts/script.js"></script>
