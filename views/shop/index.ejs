<div class="container">
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% products.forEach((product) => { %>
    <div class="col-xl-3 col-lg-4 col-md-6">
      <form action="/products/add-to-cart/<%= product._id %>" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <figure class="card card-product mr-auto ml-auto">
          <div class="img-wrap">
            <img src="<%= product.imagePath %>" />
            <button
              class="btn btn-outline-warning btn-sm btn-top-right" type="submit"
              style="border: none;"
            >
              <i class="fas fa-plus"></i>
            </button>
            <a class="btn-overlay" href="#"
              ><i class="fa fa-search-plus"></i> Quick view</a
            >
          </div>
          <figcaption class="info-wrap">
            <a href="#" class="title"><%= product.name %></a>

            <div class="action-wrap">
              <div class="price-wrap h5">
                <div class="row">
                  <div class="col-6">
                    <input
                      class="form-control"
                      type="number"
                      name="qty"
                      placeholder="Qty"
                      value="1"
                      min="1"
                      style="width:100%;"
                      required
                    />
                  </div>
                  <div class="col-6">
                    <select
                      class="float-right form-control"
                      name="type"
                      onchange="changePrice(this)"
                    >
                      <% product.bundles.forEach((bundle) => { %>
                      <option
                        data-product="<%= product._id %>"
                        data-bundle="<%= bundle._id %>"
                        ><%= bundle.unit %></option
                      >
                      <% }); %>
                    </select>
                  </div>
                </div>
              </div>

              <!-- <div class="price-wrap mt-1"> -->
                <div class="row ml-0">
                  <div class="col-8 price-wrap ml-0 pl-0">
                    <span class="ml-0 pl-0">&#x20A6;</span>
                    <span class="price-new" name="price" id="<%= product._id %>">
                      <%= product.bundles[0].price %> / 
                      <%= product.bundles[0].unit %>
                    </span>
                  </div>
                </div>
              <!-- </div> -->

              <!-- price-wrap.// -->
            </div>
            <!-- action-wrap -->
          </figcaption>
        </figure>
      </form>
      <!-- card // -->
    </div>
    <% }); %>
  </div>
</div>

<script type="text/javascript" src="/javascripts/script.js"></script>

