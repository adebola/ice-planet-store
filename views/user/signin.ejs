<% include ../partials/header %>

<div class="card mx-auto mt-5" style="max-width: 500px;">
  <div class="card">
    <article class="card-body">
      <div class="row">
        <div class="col-md-9">
          <h4 class="card-title mt-3 text-center text-md-left">
            Sign Into Your Account
          </h4>
        </div>
        <div class="col-md-3">
          <div class="container mx-auto mb-3" style="max-width: 100px;">
            <img src="/images/logo.png" class="img-fluid" />
          </div>
        </div>
      </div>
      <hr />

      <form action="/users/signin" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fal fa-user"></i>
              </span>
            </div>
            <input
              name="email"
              class="form-control"
              placeholder="Email"
              type="email"
            />
          </div>
          <!-- input-group.// -->
        </div>
        <!-- form-group// -->
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="far fa-lock-open-alt"></i>
              </span>
            </div>
            <input
              class="form-control"
              placeholder="******"
              type="password"
              name="password"
            />
          </div>
          <!-- input-group.// -->
        </div>
        <!-- form-group// -->
        <div class="form-group">
          <button type="submit" class="btn btn-warning btn-block">Login</button>
        </div>
        <!-- form-group// -->
      </form>
      <div class="row">
        <div class="col-6">
          <a href="/users/forgotpassword" class="btn btn-outline-warning"
            >Forgot password</a
          >
        </div>
        <div class="col-6 text-right">
          <a href="/users/signup" class="btn btn-outline-warning">SignUp</a>
        </div>
      </div>
    </article>
  </div>
  <!-- card.// -->
</div>

<% include ../partials/footer %>
