<% include partials/header %>

<div class="card mx-auto mt-5" style="max-width: 500px;">
  <div class="card">
    <article class="card-body">
      <div class="container ">
        <h4 class="card-title mb-4 mt-1 text-center">Change Password for <%=user.fullname%></h4>
      </div>

      <hr />

      <form action="/user/reset/<%=user.passwordResetToken%>" method="POST">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input
              name="password"
              class="form-control"
              placeholder="New Password"
              type="password"
              required
            />
          </div>
          <!-- input-group.// -->
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-warning btn-block">Change Password</button>
        </div>
      </form>
    </article>
  </div>
  <!-- card.// -->
</div>

<% include partials/footer %>